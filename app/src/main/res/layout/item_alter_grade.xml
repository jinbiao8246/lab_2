<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_alter_grade_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:background="@drawable/touch_bg"
        >

        <LinearLayout
            android:id="@+id/item_alter_grade_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/touch_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">

                <TextView
                    android:id="@+id/item_alter_grade_number"
                    android:layout_width="165sp"
                    android:layout_height="wrap_content"
                    android:text="学号：20151120266"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/item_alter_grade_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名：金彪"
                    android:textSize="17sp"
                    android:layout_marginLeft="35sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">

                <TextView
                    android:id="@+id/item_alter_grade_theorygrage"
                    android:layout_width="165sp"
                    android:layout_height="wrap_content"
                    android:text="理论成绩：未打分"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/item_alter_grade_labgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实验成绩：未打分"
                    android:textSize="17sp"
                    android:layout_marginLeft="35sp"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>